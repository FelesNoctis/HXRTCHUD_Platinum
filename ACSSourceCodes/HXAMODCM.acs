		else if (CheckActorClass(0, HXS_GetTokenString(KRIEGSLAND1CLASS))
			&& CheckInventory(HXS_GetTokenString(KRIEGSLAND1GRENADES))
			&& CheckInventory(HXS_GetTokenString(KRIEGSLAND1MELEE))
