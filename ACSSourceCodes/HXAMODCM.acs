		}
	// No mod detected
		else if (!CheckInventory(HXS_GetTokenString(HXMOD_NONE))
			&&	!CheckInventory(HXS_GetTokenString(HXMOD_MODFOUND)))
		{ GiveInventory(HXS_GetTokenString(HXMOD_NONE), 1); }
