				GiveInventory(HXS_GetTokenString(HXMOD_BRUTALDOOMBLACK), 1);
				if (CheckInventory(HXS_GetTokenString(HXMOD_NONE))) { TakeInventory(HXS_GetTokenString(HXMOD_NONE), 1); }
			}
			// Brutal Wolfenstein (ZioMcCall)
