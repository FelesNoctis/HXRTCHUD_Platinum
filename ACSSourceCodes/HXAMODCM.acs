			}
			// Brutal Doom v21 / CE
			else if (CheckInventory(HXS_GetTokenString(BDITEMNOTTACTICAL))
					|| CheckInventory(HXS_GetTokenString(BDITEMTACTICAL))
					|| CheckInventory(HXS_GetTokenString(BDITEMPURIST)))
			{
