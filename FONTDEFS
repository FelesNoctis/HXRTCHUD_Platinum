// FONT DEFINITIONS FOR HXRTC HUD PLATINUM

// SMALL: Imitates the smaller embedded fonts in the images
HXGENERALFONTS
{
	TEMPLATE HXSML%03d
}

// MEDIUM: Imitates the larger embedded fonts in the images
HXGENERALFONTM
{
//	SPACEWIDTH 4
	TEMPLATE HXMED%03d
}

// SMALL: Used for ammo tally, etc
HXINDEXFONTS
{
	0 HXYSNUM0
	1 HXYSNUM1
	2 HXYSNUM2
	3 HXYSNUM3
	4 HXYSNUM4
	5 HXYSNUM5
	6 HXYSNUM6
	7 HXYSNUM7
	8 HXYSNUM8
	9 HXYSNUM9
	NOTRANSLATION 160
}

// MEDIUM: Numbers from General font
HXINDEXFONTM
{
	0 HXMED048
	1 HXMED049
	2 HXMED050
	3 HXMED051
	4 HXMED052
	5 HXMED053
	6 HXMED054
	7 HXMED055
	8 HXMED056
	9 HXMED057
}

// LARGE: Used for current weapon ammo
HXSTATUSFONT
{
	0 HXTNUM0
	1 HXTNUM1
	2 HXTNUM2
	3 HXTNUM3
	4 HXTNUM4
	5 HXTNUM5
	6 HXTNUM6
	7 HXTNUM7
	8 HXTNUM8
	9 HXTNUM9
	A HXTNUMA
	B HXTNUMB
	E HXTNUME
	H HXTNUMH
	M HXTNUMM
	N HXTNUMN
	O HXTNUM0
	R HXTNUMR
	T HXTNUMT
	U HXTNUMU
	W HXTNUMW
	r HXTNUMLR
	? HXTPUNQ
	NOTRANSLATION 109 // (Don't touch the shadow color!)
}